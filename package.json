{
  "name": "gerar-cpf",
  "version": "2.0.3",
  "description": "Gerador de CPF",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "docs": "jsdoc2md index.js > API_REFERENCE.md",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/guilhermehn/gerar-cpf.git"
  },
  "keywords": [
    "cpf",
    "gerar",
    "gerador"
  ],
  "author": "Guilherme Nagatomo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guilhermehn/gerar-cpf/issues"
  },
  "homepage": "https://github.com/guilhermehn/gerar-cpf",
  "jest": {
    "collectCoverage": true,
    "verbose": false,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "index.js": [
      "npm run docs",
      "git add API_REFERENCE.md"
    ]
  },
  "devDependencies": {
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^26.1.2",
    "husky": "^5.1.3",
    "jest": "^29.4.3",
    "jsdoc-to-markdown": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.0.4",
    "validar-cpf": "^2.1.2"
  },
  "directories": {
    "test": "test"
  }
}
